            "get": {
                "tags": [
                    "User Library"
                ],
                "summary": "List books available to link (exclude already linked)",
                "operationId": "d71f054aca8a00212d3dbb0f93ea8dc3",
                "responses": {
                    "200": {
                        "description": "OK",
